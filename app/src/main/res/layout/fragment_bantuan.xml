<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="8dp">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Navigasi Menu dibagian pojok kiri layar atas berupa tombol dengan pilihan, yaitu:"
        android:layout_weight="1"
        android:layout_margin="5dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1. Beranda, berisi menu utama dimana akan ditampilkan 3 buah tombol, yaitu:"
        android:layout_weight="1"
        android:layout_margin="5dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="a. Peralatan, tombol ini akan masuk ke dalam informasi peralatan untuk pengendara"
        android:layout_weight="1"
        android:layout_marginLeft="20dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="b. Sebelum Berkendara, tombol ini akan masuk ke dalam informasi persiapan sebelum berkendara"
        android:layout_weight="1"
        android:layout_marginLeft="20dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="c. Saat Berkendara, tombol ini akan masuk ke dalam informasi hal yang perlu diketahui saat berkendara"
        android:layout_weight="1"
        android:layout_marginLeft="20dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2. Bantuan, berisi panduan menggunakan aplikasi"
        android:layout_weight="1"
        android:layout_margin="5dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="3. Tentang, berisi informasi tentang aplikasi ini"
        android:layout_weight="1"
        android:layout_margin="5dp" />
</LinearLayout>
</android.support.v7.widget.CardView>