<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:weightSum="2">

    <android.support.v7.widget.CardView
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        card_view:cardUseCompatPadding="true"
        card_view:cardCornerRadius="8dp"
        card_view:cardElevation="8dp"
        android:weightSum="2"
        android:layout_weight="1">

        <ImageView android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"
            android:id="@+id/br_alat"
            android:onClick="onClick"
            android:src="@drawable/peralatan" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Peralatan"
            android:id="@+id/textView"
            android:gravity="center"
            android:layout_gravity="bottom"
            android:layout_weight="1" />

    </android.support.v7.widget.CardView>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="2"
        android:layout_weight="1">

        <android.support.v7.widget.CardView
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            card_view:cardUseCompatPadding="true"
            card_view:cardCornerRadius="8dp"
            card_view:cardElevation="8dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/br_sbl"
                android:src="@drawable/preparation"
                android:layout_weight="1"
                android:layout_margin="25dp"
                android:layout_gravity="top"
                android:onClick="onClick"
                android:adjustViewBounds="false" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Sebelum Berkendara"
                android:id="@+id/textView2"
                android:gravity="center"
                android:layout_gravity="bottom"/>
        </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        card_view:cardUseCompatPadding="true"
        card_view:cardCornerRadius="8dp"
        card_view:cardElevation="8dp"
        android:layout_weight="1">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/br_saat"
                    android:layout_weight="1"
                    android:src="@drawable/jalan"
                    android:layout_margin="20dp"
                    android:onClick="onClick" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Saat Berkendara"
                    android:id="@+id/textView3"
                    android:gravity="center"
                    android:layout_gravity="bottom"/>
            </android.support.v7.widget.CardView>
    </LinearLayout>

</LinearLayout>
